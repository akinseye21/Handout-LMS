<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterSplash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical"
            android:background="@drawable/newspaper">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Handout"
                    android:textColor="#27233a"
                    android:textSize="18dp"
                    android:id="@+id/txtv1"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Handout is a virtual social learning environment"
                    android:paddingBottom="5dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtv2"
                    android:textSize="15dp"
                    android:textColor="#27233a"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="with innovative learning technology to help learners adapt"
                    android:id="@+id/txtv3"
                    android:gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:textSize="15dp"
                    android:textColor="#27233a"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to new standards, giving every user"
                    android:id="@+id/txtv5"
                    android:gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:textSize="15dp"
                    android:textColor="#27233a"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="equal opportunity to realize their potential"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtv4"
                    android:textSize="15dp"
                    android:textColor="#27233a"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:text="Login"
                    android:textSize="18dp"
                    android:textColor="#474747"
                    android:background="@drawable/buttonlogin"
                    android:textAllCaps="true"
                    android:id="@+id/login"
                    android:layout_marginRight="10dp"/>

                <Button
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:textColor="#fff"
                    android:background="@drawable/buttonreg"
                    android:text="Register"
                    android:id="@+id/reg"
                    android:textSize="18dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>