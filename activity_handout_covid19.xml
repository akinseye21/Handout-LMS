<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerlayout"
    tools:context=".HandoutCovid19">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/covid_hd_img2">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/covid_logo" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#34364b"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#222a37"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country : NIGERIA"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-black"
                    android:paddingTop="20dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="20dp"
                    android:id="@+id/country"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/country"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:id="@+id/linear1">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/sick"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Confirmed"
                                    android:textSize="10dp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#ffffff"
                                    android:paddingLeft="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cases"
                                    android:textSize="10dp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#ffffff"
                                    android:paddingLeft="5dp"/>


                            </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffffff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:id="@+id/confirmedcase"
                            android:fontFamily="sans-serif-black"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/country"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:id="@+id/linear2">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/rip"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No of"
                                    android:textSize="10dp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#ffffff"
                                    android:paddingLeft="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deaths"
                                    android:textSize="10dp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#ffffff"
                                    android:paddingLeft="5dp"/>


                            </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffffff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:id="@+id/deathcase"
                            android:fontFamily="sans-serif-black"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/country"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:id="@+id/linear3">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/happy"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No of"
                                    android:textSize="10dp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#ffffff"
                                    android:paddingLeft="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Recoveries"
                                    android:textSize="10dp"
                                    android:fontFamily="sans-serif-light"
                                    android:textColor="#ffffff"
                                    android:paddingLeft="5dp"/>


                            </LinearLayout>


                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffffff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:id="@+id/recoverycase"
                            android:fontFamily="sans-serif-black"/>

                    </LinearLayout>

                </LinearLayout>




                <android.support.design.widget.TabLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/tablayoutcovid"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/linear2"
                    app:tabGravity="center"
                    app:tabTextAppearance="@style/MyCustomTabText"
                    app:tabIndicatorColor="#ffffff"
                    app:tabIndicatorHeight="1dp"
                    app:tabSelectedTextColor="#ffffff"
                    app:tabMaxWidth="60dp"
                    android:padding="1dp"
                    app:tabPadding="1dp"
                    android:id="@+id/tablayoutcovid"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#222a37"
                    android:paddingBottom="10dp">

                </android.support.v4.view.ViewPager>

            </LinearLayout>





            <FrameLayout
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal|center|bottom"
                    android:background="#12141b"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

<!--                    <View-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="1dp"-->
<!--                        android:background="#727193" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp"
                            android:id="@+id/linmenu"
                            >

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/menu_top" />



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="60dp"
                            android:id="@+id/home">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/triviahomeicon" />



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginRight="60dp"
                            android:id="@+id/lincovid19">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/triviacovidicon" />



                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="60dp"
                            android:id="@+id/lintips">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/triviatipsicon" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:id="@+id/lintrivia">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:src="@drawable/triviagameicon" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#12161f"
        android:divider="#fff"
        app:itemIconTint="@android:color/white"
        android:dividerHeight="1dp"
        app:itemTextColor="#fff"
        app:itemTextAppearance="@style/NavigationText"
        app:menu="@menu/navigation_menu_covid"
        android:layout_gravity="start"
        android:id="@+id/navigationview">

    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>